{
  "name": "imicros-exchange",
  "version": "0.0.2",
  "author": "Andreas Leinen <andreas.leinen@imicros.de> (www.imicros.de)",
  "license": "MIT",
  "description": "Collection of Moleculer services for file exchange and message handling",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage --no-cache",
    "test-local": "jest --coverage --no-cache --config=local.js"
  },
  "jest": {
    "collectCoverageFrom": [
      "lib/*.js",
      "lib/util/*.js",
      "!lib/globals.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dev/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dev/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/al66/imicros-exchange.git"
  },
  "keywords": [
    "imicros",
    "moleculer",
    "messages"
  ],
  "devDependencies": {
    "jest": "^26.6.3",
    "moleculer": "^0.14.12"
  },
  "dependencies": {
    "cassandra-driver": "^4.6.1",
    "neo4j-driver": "^4.2.3",
    "uuid": "^8.3.2"
  }
}
